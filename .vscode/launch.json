{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Tests",
      "type": "node",
      "request": "launch",
//      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "protocol": "inspector",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "stopOnEntry": false,
      "args": [
        "--runInBand"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "babel-node",
      "runtimeArgs": [
          "--nolazy"
      ],
      "sourceMaps": true,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
